//test ok

interface
  ValueEvent
    function tick( val: R{0,255} );
  end

component
  TransDist

  input
    in      : ValueEvent;
  
  output
    out     : ValueEvent;
    
  implementation hfsm(Top)
  
    state Top(A)
      transition 
        Top to A by in.tick( val: R{0,255} ) if val = 0 do
          out.tick( 0 );
        end
        
        B to A by in.tick( val: R{0,255} ) if val = 1 do
          out.tick( 1 );
        end
      
      state A
        transition 
          A to Top by in.tick( val: R{0,255} ) if val = 2 do  // should not work since Top is in outer scope of A
            out.tick( 2 );
          end
          
          Top to A by in.tick( val: R{0,255} ) if val = 3 do
            out.tick( 3 );
          end
      end

      transition 
        A to A by in.tick( val: R{0,255} ) if val = 4 do
          out.tick( 4 );
        end
        
        Top to B by in.tick( val: R{0,255} ) do
          out.tick( 5 );
        end
      
      state B
      end
    end
  end

