type
  Uni = Union
    pos  : R{0,10};
    neg  : R{-10,10};
  end

component
  Union3
    input
      evt();

    implementation elementary

    var
      data : Uni;

    function abs( x: R{-10,10} ):R{0,10}
      if x < 0 then
        return R{0,10}( -x );
      else
        return R{0,10}( x );
      end
    end
  
    function evt()
      x : R{0,10};
      if data is Uni.pos then
        x := data.pos;
      ef data is Uni.neg then
        x := abs( data.neg );
      end
    end
    

  end


