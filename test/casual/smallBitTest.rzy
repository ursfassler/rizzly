type
  Rec = Record
    s0    : R{0,0};
    s8a   : R{0,1};
    s8b   : R{0,3};
    s8c   : R{0,15};
    s8d   : R{0,127};
    s8e   : R{0,255};
    s16a  : R{0,511};
    s16b  : R{0,32767};
    s32a  : R{0,1131071};
    s32b  : R{0,16777215};
    s64   : R{0,8589934591};
  end
  
  TheArray = Array{10,R{0,31}};

interface  
  Tick
    function tick( x: R{0,127} );
  end

component
  SmallBitTest
    input
      tickIn  : Tick;
    
    output
      tickOut : Tick;
      
    implementation elementary

    var
      count : R{0,7};
      dummy : Rec;
      array : TheArray;
    
    function tickIn.tick( x: R{0,127} )
      if x = 0 then
        count := 0;
      else
        count := count + 1;
      end
      if count = 7 then
        tickOut.tick( 7 );
      end
    end

  end


