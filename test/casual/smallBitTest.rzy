type
  Rec = Record
    s0    : U{0};
    s8a   : U{1};
    s8b   : U{2};
    s8c   : U{4};
    s8d   : U{7};
    s8e   : U{8};
    s16a  : U{9};
    s16b  : U{15};
    s32a  : U{17};
    s32b  : U{24};
    s64   : U{33};
  end
  
  TheArray = Array{10,U{5}};

interface  
  Tick
    function tick( x: U{7} );
  end

component
  SmallBitTest
    input
      tickIn  : Tick;
    
    output
      tickOut : Tick;
      
    implementation elementary

    var
      count : U{3};
      dummy : Rec;
      array : TheArray;
    
    function tickIn.tick( x: U{7} )
      if x = 0 then
        count := 0;
      else
        count := count + 1;
      end
      if count = 7 then
        tickOut.tick( 7 );
      end
    end

  end


