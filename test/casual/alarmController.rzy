component
  AlarmController
    input
      getTime():R{0,99};
      time( seconds: R{0,99} );
    
  implementation hfsm(Disabled)
    entry
      atime   := 0;
    end
    
    var
      atime   : R{0,99};
      
    function getTime():R{0,99}
      return atime;
    end
    
    state Disabled
    end
    
    transition 
      Disabled to Disabled by time( seconds: R{0,99} ) if 0 = seconds;
    
  end

