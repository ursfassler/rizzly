interface
  TimeConfig
    function getTime():R{0,99};
    function time( seconds: R{0,99} );
  end
  
component
  AlarmController
    input
      config      : TimeConfig;
    
  implementation hfsm(Disabled)
    entry
      atime   := 0;
    end
    
    var
      atime   : R{0,99};
      
    function config.getTime():R{0,99}
      return atime;
    end
    
    state Disabled
    end
    
    transition 
      Disabled to Disabled by config.time( seconds: R{0,99} ) if 0 = seconds;
    
  end

