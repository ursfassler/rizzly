component
  StateVar1
    slot   ind( x: R{0,10} );
    signal out( x: R{0,10} );
    
  implementation elementary
    
    var
      a : R{0,10} = 0;
      
    function inc()
      a := (a + 1) mod 11;
    end
    
    slot ind( x: R{0,10} )
      a := (a + 1) mod 11;
      inc();
      out( a );
    end
    
  end

