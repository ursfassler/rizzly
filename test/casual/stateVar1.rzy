component
  StateVar1
    input
      in( x: R{0,10} );
    
    output
      out( x: R{0,10} );
    
  implementation elementary
    
    var
      a : R{0,10};
      
    entry
      a := 0;
    end
    
    function inc()
      a := (a + 1) mod 11;
    end
    
    function in( x: R{0,10} )
      a := (a + 1) mod 11;
      inc();
      out( a );
    end
    
  end

