type
  Point = Record
    x : R{0,255};
    y : R{0,255};
  end

component
  While

    input
      in( x: R{0,255} ):Point;

    output
      out( x: R{0,255} ):Point;

    implementation elementary

    function in( x: R{0,255} ):Point
      ret : Point;
      ret.x := 0;
      ret.y := 0;
      i : R{0,256} = 0;
      while i < x do
        ret := out( x );
        i := R{1,256}( i+1 );
      end
      return ret;
    end
  end

