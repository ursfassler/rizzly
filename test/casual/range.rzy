
interface
  Tick
    function tick( x: R{0,10} );
  end
  
component
  Range
    input
      in  : Tick;
    
    output
      out : Tick;
      
    implementation elementary
    
    var
      a : R{0,10};
    
    function in.tick( x: R{0,10} )
      la : R{0,10} = a;   //TODO remove "la" (used temporarly since compiler is not yet too good)
      if la < 10 then
        la := la + 1;
        out.tick( la );
      else
        out.tick( x );
      end
      a := la;
    end
    
