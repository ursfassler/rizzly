
Time = Component
  readDigit: response( digit: R{0,3} ):R{0,9};

elementary
  readDigit: response( digit: R{0,3} ):R{0,9}
    return digit;
  end
end

Display = Component
  readSym : query( digit: R{0,3} ):R{0,9};
  tick: slot();
  
elementary
  tick: slot()
    readSym( 0 );
  end
end

SubrespLink = Component
  tick: slot();
  
composition
  display : Display;
  time    : Time;
  
  tick -> display.tick;
  display.readSym -> time.readDigit;
end

