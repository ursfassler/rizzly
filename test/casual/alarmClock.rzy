
AlarmClock = Hfsm
  tick : slot();
  alarm : signal();
  
  state(Counting)
    time    : R{0,5} = 5;
    
    Counting : state;
    Off : state;
    
    Counting to Counting by tick() if time > 0 do
      time := R{0,5}( time - 1 );
    end
    
    Counting to Off by tick() if time = 0 do
      alarm();
    end
  end
  
end

