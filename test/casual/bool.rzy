Rec = Record
  a   : Boolean;
  b   : Boolean;
  c   : Boolean;
end

TheBool = Boolean;
TheArray = Array{3,Boolean};

Bool = Elementary
  tickOut : signal( x: R{0,255} );

  varA  : Rec = ( a := False, b := True, c := False );
  varB  : Boolean = True;  //TODO what with TheBool?
  varC  : Array{3,Boolean} = [ True, True, False ];  //TODO what with TheArray?

  tickIn : slot( x: R{0,255} )
    if x = 0 then
      varA.a := True;
      varA.b := varB;
    else
      varB   := varC[1];
      tickOut( 7 );
    end
  end

end


