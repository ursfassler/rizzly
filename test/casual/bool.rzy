type
  Rec = Record
    a   : Boolean;
    b   : Boolean;
    c   : Boolean;
  end
  
  TheBool = Boolean;
  TheArray = Array{3,Boolean};

component
  Bool
    input
      tickIn( x: R{0,255} );
    
    output
      tickOut( x: R{0,255} );
      
    implementation elementary

    var
      varA  : Rec;
      varB  : Boolean;  //TODO what with TheBool?
      varC  : Array{3,Boolean};  //TODO what with TheArray?
    
    function tickIn( x: R{0,255} )
      if x = 0 then
        varA.a := True;
        varA.b := varB;
      else
        varB   := varC[1];
        tickOut( 7 );
      end
