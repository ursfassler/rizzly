interface
  Tick
    function tick( x: R{0,200} );
  end

component
  ArrayTest
    input
      in  : Tick;
      
    output
      out : Tick;

  implementation elementary

    var
      a : Array{20,R{0,200}};
    
    entry
      i : R{0,20} = 0;
      while i <= 20 do
        a[i] := i*10;
      end
    end

    function in.tick( x: R{0,200} )
      a[(x * 5) mod 21] := (a[x mod 11] + a[10 + (x mod 11)]) / 2;
      out.tick( a[x mod 21] );
    end

  end

