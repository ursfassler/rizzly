type
  Point = Record
    x : R{0,100};
    y : R{0,100};
  end

interface
  Tick
    function tick;
  end

component
  Rec
    input
      in  : Tick;
    
  implementation elementary

    var
      p : Point;
      q : Point;

    function in.tick
      p.x := (p.y + 1) mod 100;
      p.y := 100 - p.y;
      q   := p;
    end

  end

