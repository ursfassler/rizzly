type
  Point = Record
    x : R{0,100};
    y : R{0,100};
  end

component
  Rec
    input
      in( x: R{0,100} );
    
    output
      out( x: R{0,100} );
    
  implementation elementary

    var
      p : Point;
      q : Point;

    entry
      p.x := 0;
      p.y := 0;
      q.x := 0;
      q.y := 0;
    end

    function in(  x: R{0,100}  )
      p.x := (p.y + x) mod 100;
      p.y := 100 - p.x;
      q   := p;
      out( q.y );
    end

  end

