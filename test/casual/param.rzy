component
  Schmitt{Lower,Upper: R{0,1000}}
    slot ind( value: R{0,1000} );
      
  implementation hfsm( Low )
    state Low end
    state High end
    
    transition
      Low to High by ind( value: R{0,1000} ) do
        a : R{0,1000} = Upper;
      end
      High to Low by ind( value: R{0,1000} ) if value <= Lower;
  end
  
  Param
    slot ind( value: R{0,1000} );
      
  implementation composition
    component
      schmitt : Schmitt{90,110};
      
    connection
      ind -> schmitt.ind;
    
  end
    
