interface
  Tick
    function tick( value: R{0,1000} );
  end

component
  Schmitt{Lower,Upper: R{0,1000}}
    input
      in  : Tick;
      
  implementation hfsm( Low )
    state Low end
    state High end
    
    transition
      Low to High by in.tick( value: R{0,1000} ) do
        a : R{0,1000} = Upper;
      end
      High to Low by in.tick( value: R{0,1000} ) if value <= Lower;
  end
  
  Param
  implementation elementary
    component
      schmitt : Schmitt{90,110};
  end
    
