Uni = Union
  byte  : R{0,255};
  word  : R{0,65535};
end

Union1 = Elementary
  data : Uni = [ byte := 42 ];

  setByte : slot( value: R{0,255} )
    data.byte := value;
  end
  
  getByte : response():R{0,255}
    return data.byte;
  end
  
  setWord : slot( value: R{0,65535} )
    data.word := value;
  end
  
  getWord : response():R{0,65535}
    return data.word;
  end

end


