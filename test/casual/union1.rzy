type
  Uni = Union( what )
    byte  : R{0,255};
    word  : R{0,65535};
  end

component
  Union1
    input
      setByte( value: R{0,255} );
      getByte():R{0,255};
      setWord( value: R{0,65535} );
      getWord():R{0,65535};

    implementation elementary

    var
      data : Uni;

    function setByte( value: R{0,255} )
      data.byte := value;
    end
    
    function getByte():R{0,255}
      return data.byte;
    end
    
    function setWord( value: R{0,65535} )
      data.word := value;
    end
    
    function getWord():R{0,65535}
      return data.word;
    end

  end


